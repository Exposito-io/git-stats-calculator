{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "es2017",
        "rootDir": "./",
        "outDir": "./build/",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "inlineSources": false,
        "baseUrl": ".",
        "paths": {
            "*": ["*"]
        },
        "lib": ["es2017", "dom"],
        "typeRoots": [
        ],
        "types": ["chai", "mocha", "node"]
    },
    "include": [
        "index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
